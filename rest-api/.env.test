# Test Environment Configuration
NODE_ENV=test
PORT=3001
HOST=localhost

# Database Configuration (use in-memory or separate test database)
DB_PATH=:memory:
# Alternative: DB_PATH=./data/stellarflow_test.db

# JWT Configuration
JWT_SECRET=test-jwt-secret-key
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=test-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=24h

# Bcrypt Configuration (lower rounds for faster tests)
BCRYPT_ROUNDS=4

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Rate Limiting (disabled for tests)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10000

# File Upload
UPLOAD_MAX_SIZE=1048576
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png

# Redis Configuration (use separate test database)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=15

# Email Configuration (disabled for tests)
EMAIL_FROM=test@stellarflow.dev
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=
EMAIL_SMTP_USER=
EMAIL_SMTP_PASS=

# Logging
LOG_LEVEL=error
LOG_FILE=./logs/test.log

# Security
SESSION_SECRET=test-session-secret
SECURE_COOKIES=false

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Monitoring (disabled for tests)
ENABLE_METRICS=false

# Test specific
SILENT_LOGS=true
DISABLE_RATE_LIMITING=true